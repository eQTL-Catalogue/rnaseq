/*
 * ---------------------------------------------------------------------------
 *  Nextflow config file for use with Singularity on University of Tartu HPC
 * ---------------------------------------------------------------------------
 * Defines basic usage limits and singularity image id.
 */

singularity {
  enabled = true
  autoMounts = true
  cacheDir = "$baseDir/singularity_img/"
}

process {
  beforeScript = 'module load singularity/3.5.3'
  executor = 'slurm'
  queue = 'amd'
}

executor {
  name = 'slurm'
  queueSize = 100
  submitRateLimit = 1
}

params {
  max_memory = 512.GB
  max_cpus = 20
  max_time = 100.h
}
